{
  "plugins": ["prettier-plugin-go-template", "prettier-plugin-toml"],
  "endOfLine": "lf",
  "printWidth": 120,
  "tabWidth": 3,
  "overrides": [
    {
      "files": [".code-workspace", ".prettierrc"],
      "options": {
        "parser": "json",
        "semi": true
      }
    },
    {
      "files": ["*.gotmpl", "**/layouts/**/*.html"],
      "options": {
        "parser": "go-template"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "always",
        "tabWidth": 3
      }
    },
    {
      "files": ["*.toml"],
      "options": {
        "parser": "toml",
        "alignEntries": true,
        "alignComments": true,
        "indentEntries": true,
        "indentTables": true,
        "tabWidth": 3
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
